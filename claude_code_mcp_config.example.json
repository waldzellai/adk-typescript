{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN_HERE"
      }
    },
    "exa": {
      "command": "node",
      "args": ["/path/to/your/exa-mcp-server/build/index.js"],
      "env": {
        "EXA_API_KEY": "YOUR_EXA_API_KEY_HERE"
      }
    },
    "exa-research-composer": {
      "command": "node",
      "args": ["/path/to/your/exa-research-composer/build/index.js"],
      "env": {
        "EXA_API_KEY": "YOUR_EXA_API_KEY_HERE"
      }
    },
    "exa-investigation-engine": {
      "command": "node", 
      "args": ["/path/to/your/exa-investigation-engine/build/index.js"],
      "env": {
        "EXA_API_KEY": "YOUR_EXA_API_KEY_HERE"
      }
    },
    "exa-knowledge-synthesizer": {
